EXTERNPROTO	Livros [ 
	field MFString face1	
	field MFString face2
	field MFString frente 
] "Livro.wrl#Livros"
												
PROTO	Prateleira [	#posicionada em y=0
]{
	Transform	{
		translation	0 0.0125 0	
		children [
			Transform	{
				children
				Shape	{
					geometry Box {
						size 0.9 0.025 0.25
					}
					appearance Appearance	{	material Material	{ diffuseColor 1 1 1 }	}
				}	
			}
			Transform	{
				translation	0 0.0125 -0.125
				children
				Shape	{
					geometry Box {
						size 0.9 0.05 0.015
					}
					appearance Appearance	{	material Material	{ diffuseColor 1 1 1 }	}
				}	
			}
		]
	}
}

PROTO	Barra_central [
]{
	Shape	{
		geometry Box {
			size 0.21 0.025 0.06 	
		}
		appearance Appearance	{ 
			texture ImageTexture {	url "imagens/madeira.jpg"	} 
		}
	}
}

PROTO	Barra_lateral [
]{
	Shape	{
		geometry Box {
			size 0.08 0.025 0.805  	
		}
		appearance Appearance	{ 
			texture ImageTexture { url "imagens/rede.jpg"	 }
			textureTransform	TextureTransform {scale	1.0 30.0	}
		} 
	}
}

PROTO	Barra_exterior [
]{
	Shape	{
		 geometry Extrusion {
      crossSection [ 
				-0.175 	0.0,	0.175	 0.0,
				0.175	1.79, -0.175		 1.79,
				-0.175 	0.0,
				-0.105	0.06, 0.105	 0.06,
				0.105	1.73, -0.105	 1.73,
				-0.105	0.06, -0.175 	 0.0


			]
			spine [0 -0.0125 0,0 0.0125 0]	 	 
			ccw	FALSE
		}
		appearance Appearance	{
			texture ImageTexture { 	url "imagens/madeira.jpg"	}
		}		
	}
}


PROTO	Lateral [
]{
	Transform	{ 
		rotation 1 0 0 -1.57
		children [
			Transform	{
				children Barra_exterior {}
			}
			Transform	{
				translation	0 0 0.895
				children Barra_central {}
			}
			Transform	{
				translation	0.065 0 0.4625
				children Barra_lateral {}
			}
			Transform	{
				translation	0.065 0 1.3275
				children Barra_lateral {}
			}
		]
	}		
}

PROTO	Base [
]{
	Shape	{
		geometry Cylinder	{
			radius 0.01
			height 0.01
		}
		appearance Appearance	{ material Material	{ diffuseColor 0 0 0 } }
	}
}

PROTO	Estante [
]{
	Group{
		children [
			Transform {
				translation -0.4625 0 0 
				rotation  0 1 0 1.57 
				children Lateral {}
			}
			Transform	{
				translation	0.4625 0 0
				rotation 0 1 0 1.57
				children Lateral {}
			}
			Transform	{
				translation	0 0.15 0		 
				children Prateleira{}
			}
			Transform	{
				translation	0 0.50 0	
				children Prateleira{}
			}
			Transform	{
				translation	0 0.85 0	
				children Prateleira{}
			}
			Transform	{
				translation	0 1.20 0	
				children Prateleira{}
			}
			Transform	{
				translation	0 1.55 0	
				children Prateleira{}
			}
			Transform	{
				translation 0.4625	-0.005 0.16 
				children Base	{}
			}
				Transform	{
				translation -0.4625	-0.005 0.16 
				children Base	{}
			}
				Transform	{
				translation 0.4625	-0.005 -0.16 
				children Base	{}
			}
				Transform	{
				translation -0.4625	-0.005 -0.16 
				children Base	{}
			}

			Transform	{
				translation	-0.2 0.3 0 
				children Livros	{face1 "imagens/c1.jpg" face2 "imagens/c5.jpg" frente "imagens/l1.jpg" }
			}
			Transform	{
				translation	-0.2 0.65 0 
				children Livros	{face1 "imagens/c2.jpg" face2 "imagens/c4.jpg" frente "imagens/l2.jpg" }
			}
			Transform	{
				translation	-0.2 1 0 
				children Livros	{face1 "imagens/c3.jpg" face2 "imagens/c1.jpg" frente "imagens/l3.jpg" }
			}
			Transform	{
				translation	-0.2 1.35 0 
				children Livros	{face1 "imagens/c4.jpg" face2 "imagens/c3.jpg" frente "imagens/l4.jpg" }
			}
			Transform	{
				translation	-0.2 1.70 0 
				children Livros	{face1 "imagens/c5.jpg" face2 "imagens/c2.jpg" frente "imagens/l5.jpg" }
			}
		]
	}
}

