PROTO Tampo_mesa [
]{
	Group	{
		children [
			Transform	{
				children
					Shape	{
						geometry Box {
							size 0.92 0.025 0.42
						}
						appearance Appearance	{	material Material	{ }	}
					}
			}
			Transform	{
				children
				Shape	{
					geometry Extrusion {
						crossSection [
						-0.5 -0.25, 0.5 -0.25, 0.5 0.25, -0.5 0.25,	-0.5 -0.25,
						-0.46 -0.21, 0.46 -0.21, 0.46 0.21, -0.46 0.21,	-0.46 -0.21, -0.5 -0.25
						]
						spine	[0 -0.0125 0, 0 0.0125 0]
						ccw	FALSE
					}
					appearance Appearance	{ texture ImageTexture { url "imagens/madeira.jpg" } }
				}
			}
		]
	}
}

