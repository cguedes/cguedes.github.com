#O poonto q fica na ORIGEM é qd se cruzam do lado q está virado p fora							 	
PROTO	Perna_mesa_dupla [
]{
	Group	{
		children [
			Transform	{
				translation	0.0125 0 0
				children	Perna_Mesa {}
			}
			Transform	{
				translation	 0 0 -0.0125 
				rotation 0 1 0 1.57
				children Perna_Mesa	{}
			}
		]
	}
}


PROTO Mesa_pequena	 []{
	Group	{
		children [
			Transform {
				translation	0 0.3725 0  #sobe 0.36m + 0.0125 (metade da espessura)
				children Tampo_mesa	{}
			}
			Transform	{		#perna esquerda frente
				translation	 -0.483 0 0.233
				children Perna_mesa_dupla	{}
			}
			Transform	{		#perna direita frente
				translation	 0.483 0 0.233
				rotation 0 1 0 1.57
				children Perna_mesa_dupla	{}
			}
			Transform	{	 	#perna direita atrás
			translation	 0.483 0 -0.233
				rotation 0 1 0 3.14
				children Perna_mesa_dupla	{}
			}
			Transform	{	 #perna esquerda atrás
				translation -0.483 0 -0.233
				rotation 0 1 0 4.71
				children Perna_mesa_dupla	{}
			}
		]
	}
}


