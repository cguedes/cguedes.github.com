			ccw	FALSE
			solid	TRUE
		}
		appearance Appearance { material Material	{ diffuseColor 0.84 0.65 0.06 }	}		
	}
}

PROTO	Mesa_computador [
]{
	Group	{
		children [
			Transform	{
				translation	0 0.7 0 
				children Base {}
			}
			Transform	{
				translation	0 0.72 -0.365  # 0.50 y/2 + 0.22 dist do  chao
				children Posterior {}
			}
			Transform	{
				translation	-0.6 0.61 -0.365 	 #posterior esq
				children Suporte {}
			}
			Transform	{
				translation	0.6 0.61 -0.365		 #posteior dir
				children Suporte {}
			}
			Transform	{
				translation	-0.6 0.41 0.335			#frente esq
				scale 1 0.673 1
				children Suporte {}
			}
			Transform	{
				translation	0.6 0.41 0.335			#frente dir
				scale 1 0.673 1
				children Suporte {}
			}
 			Transform	{
				translation	-0.6 0.74 -0.015
				rotation 0 0 1 1.57
				children [
					Transform{
						rotation 0 1 0 1.57
						children Lateral {}
					}
				]
			}
			Transform	{
				translation	0.6 0.74 -0.015
				rotation 0 0 1 1.57
				children [
					Transform{
						rotation 0 1 0 1.57
						children Lateral {}
					}
				]
			}
			Transform	{
				translation	0 0.72 0
				children Computador	{}
			}
		]
	}
}

