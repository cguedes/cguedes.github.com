		geometry Box {
			size 1.17 0.04 0.7
		}
		appearance Appearance { material Material	{ diffuseColor 0.84 0.65 0.06 }	}
	}
}

PROTO	Posterior [	 
]{
	Shape	{
		geometry Box {
			size 1.17 1 0.03 #o y foi ao acaso 
		}
		appearance Appearance { material Material	{ diffuseColor 0.84 0.65 0.06 }	}
	}
}

PROTO	Suporte	[
]{
	Shape	{
		geometry Cylinder {
			radius 0.015
			height 1.22
		}
		appearance Appearance	{	material	Material	{ diffuseColor 0.5 0.5 0.5 } }
	}
}

PROTO	Lateral [
]{
	Shape	{
		geometry Extrusion {
			crossSection[ 
				-0.335 -0.48, 
				0.335 -0.08,
				0.335 0.48,
				-0.335 0.08,
				-0.335 -0.48
		  ]
