#VRML V2.0 utf8

#Ficheiro para defnição de placares e quadro de testes

PROTO Board [
	field MFString image ""
]{
	Shape {
		appearance Appearance {
			texture	ImageTexture {
				url IS image
			}
			material Material { ambientIntensity 0 }
		}

		geometry Box {
			size 1.395 0.796 0.057
		}
	}
}

PROTO TestBoard [
	field MFString image ""
]{
	Shape {
		appearance Appearance {
			texture	ImageTexture {
				url IS image
			}
			material Material { ambientIntensity 0 }
		}

		geometry Box {
			size 0.905 0.605 0.02
		}
	}
}

