#VRML V2.0 utf8  

# Mesa em VRML
# Coordenadas dos objectos em CM


Transform { children Inline { url "axis.wrl" } }

#cilindros de apoio
PROTO Cilindro_apoios [ field SFColor objColor 0 0 0 ] {
	Shape {
		geometry Cylinder {
			bottom TRUE
			top	TRUE
			side TRUE
			height 40
			radius 1			
		}
		appearance Appearance {
			material Material { diffuseColor IS objColor }
		}
	}
}

#cilindros para movimentacao de tabuleiros
PROTO Cilindros [ field SFColor objColor 0.4 0.4 0.4 ] {
	Shape {
		geometry Cylinder {
			bottom TRUE
			top	TRUE
			side TRUE
			height 150
			radius 1			
		}
		appearance Appearance {
			material Material { diffuseColor IS objColor }
		}
	}
}

# Tampo da mesa em centímetros
PROTO Tampo_cm
[
]
{
  Shape { 
    geometry Box { size 80 5 150 }
    appearance Appearance { material Material { } }
  }
}

#Caixa transparente onde se coloca a comida
PROTO white_box
[
]
{
   Shape {
      geometry Box {
	      size 50 40 150
      }
      appearance Appearance {
		  material Material {
	  		ambientIntensity  0.2
			diffuseColor      1 1 1 
			emissiveColor     0 0 0
			shininess         0.3
			specularColor     0 0 0       
			transparency      .5
	      }
      }
     }


}
#Tampo frontral da mesa em centimetros
PROTO Tampo_frontal
[field SFColor objColor 0.8 0.1 0.1]
{
	Shape {
		geometry Box { size 150 100 4 }
		appearance Appearance { material Material {diffuseColor IS objColor } }

	}
}
#Tampo lateral da mesa em centimetros
PROTO Tampo_lateral
[ field SFColor objColor 0.4 0.2 0.1  ]
{
	Shape {
		geometry Box { size 80 100 4 }
		appearance Appearance { material Material { diffuseColor IS objColor } }

	}
}
# Pernas da mesa em centímetros
PROTO Perna_cm 
[
]
{
  Shape {
    geometry Box { size 4 120 4 }
    appearance Appearance { material Material { } }
  }
}




PROTO Mesa_cm
[
]
{
  Group {
    children 
    [
      Transform {
        translation 0 2.5 0       # horizontal (para a origem ficar na parte de baixo da mesa)
        children Tampo_cm { }
      }
	  Transform {
        translation -15 25  0       # horizontal (para a origem ficar na parte de baixo da mesa)
        children white_box { }
      }
	  Transform {
		rotation	0 1 0 1.57	   # rotacao em relacao ao eixo dos x
        translation -38.1 -45 0       # horizontal (para a origem ficar na parte de baixo da mesa)
        children Tampo_frontal { }
      }
	  Transform {
        translation 0 -45 73.01       # horizontal (para a origem ficar na parte de baixo da mesa)
        children Tampo_lateral { }
      }
	  Transform {
        translation 0 -45 -73.01       # horizontal (para a origem ficar na parte de baixo da mesa)
        children Tampo_lateral { }
      }
      Transform {
        translation 30 -55 55   # horiontal, colocar no canto. (37.5 = 75/2 ==> mover a perna para baixo)
        children Perna_cm { }
      }
      Transform {
        translation -30 -55 55  # horiontal, colocar no canto.
        children Perna_cm { }
      }
      Transform {
        translation -30 -55 -55 # horiontal, colocar no canto.
        children Perna_cm { }
      }
      Transform {
        translation 30 -55 -55  # horiontal, colocar no canto.
        children Perna_cm { }
      }
	  Transform {
		  rotation 1 0 0 1.57
		  rotation 0 0 1 1.57
		translation -57.5 -5 0  # horiontal, colocar no canto.
        children Cilindro_apoios { }
      }
	  Transform {
		  rotation 1 0 0 1.57
		  rotation 0 0 1 1.57
		translation -57.5 -5 -65  # horiontal, colocar no canto.
        children Cilindro_apoios { }
      }
	  Transform {
		  rotation 1 0 0 1.57
		  rotation 0 0 1 1.57
		translation -57.5 -5 65  # horiontal, colocar no canto.
        children Cilindro_apoios { }
      }

	  Transform {
		rotation 1 0 0 1.57
		translation -50 -3 0  # horiontal, colocar no canto.
        children Cilindros { }
      }
	  Transform {
		rotation 1 0 0 1.57
		translation -63 -3 0  # horiontal, colocar no canto.
        children Cilindros { }
      }
	  Transform {
		rotation 1 0 0 1.57
		translation -76 -3 0  # horiontal, colocar no canto.
        children Cilindros { }
      }

	  
    ]
  }
}

# Definição da mesa em metros (para usar as unidades do VRML)
#   - centro da mesa passa a ser junto à parte de baixo das pernas
#   
#    1 m  = 100  cm
#    1 cm = 0.01 m
#    
PROTO Mesa_m [

]{
  Transform
  {
    center 0 0.6 0  # Atenção: A escala é feita primeiro, logo a translacção é em metros.
    scale 0.01 0.01 0.01
    children Mesa_cm { }
  }
  
}


Mesa_m { }




