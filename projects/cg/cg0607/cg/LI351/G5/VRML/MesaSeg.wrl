####################################
PROTO perna []{
	Shape {
		  geometry Box {size 0.04 0.75 0.04}
		  appearance Appearance { material	Material { diffuseColor 0.8 0.8 0.8 } }
	}
}

####################################
#		Tampo                       
####################################
PROTO tampo []{
	Shape {
		  geometry Box { size 1.5 0.05 0.50 }
		  appearance Appearance { 
			  material	Material {  } 
			  texture ImageTexture {url "imagens/wood5.jpg" }
		  }
	}
}

####################################
#		Mesa                        
####################################
