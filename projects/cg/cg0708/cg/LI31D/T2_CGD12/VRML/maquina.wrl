#VRML V2.0 utf8

EXTERNPROTO	frente_maquina[]
["frente_maquina.wrl#frente_maquina"]

EXTERNPROTO	tras_maquina[]
["tras_maquina.wrl#tras_maquina"]

PROTO maquina
[
	field SFVec3f posicao 0 0 0
]
{
	Transform{
		translation	IS posicao
		children [
			frente_maquina{}
			tras_maquina{}
		]
	}
}

