#Espaço entre o ecran e as notas
PROTO frente_5[]
{
	Transform{ 
		children Shape{
			appearance Appearance 
			{
				material Material {
					diffuseColor 0.196 0.196 0.392
					specularColor 0.2 0.2 0.6
