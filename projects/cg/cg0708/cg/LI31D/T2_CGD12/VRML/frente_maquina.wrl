#Espaço entre as notas e a portinhola
PROTO frente_7[]
{
	Transform{ 
		children Shape{
			appearance Appearance 
			{
				material Material {
					diffuseColor 0.196 0.196 0.392
					specularColor 0.2 0.2 0.6
					shininess 0.1
				}
			}
			geometry Box {size 45 16.8801 0.0001}
		}
