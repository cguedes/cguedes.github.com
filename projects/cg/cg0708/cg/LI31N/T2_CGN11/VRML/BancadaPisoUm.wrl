#VRML V2.0 utf8


PROTO barraBranca [
	field SFVec3f sSize 1 1 1
	field SFVec3f Position 0 0 0
	field SFRotation RotationPosition 0 0 1 0
]{
	Transform {
		rotation IS RotationPosition
		translation	IS Position

		children [
			Shape {
				geometry Box {
					size IS	sSize
				}

				appearance Appearance {
					material Material {
						diffuseColor 1 1 1
					}
				}
			}
		]
	}


}

		 		  
PROTO Bancada [
	field SFRotation RightOrLeft 0 0 0 0
	field SFVec3f Position 0 0 0
	field MFVec3f Espinha [0 0 0, -20 0 0]
	field MFVec3f EspinhaEscadas [0 0 0, -2 0 0]
]
{
	Transform {
		translation	IS Position
		rotation IS	RightOrLeft

		children [
			Shape {
				geometry Extrusion { 
					crossSection [0 -1, 0 0, 1 -1, 0 -1]
					spine IS Espinha #[0 0 0,-1 0 0]
					scale [10 20, 10 20]
					orientation 0 0 1 0
					endCap TRUE
					beginCap TRUE
					solid TRUE
					ccw TRUE
					convex TRUE
					creaseAngle 0
				}
				appearance Appearance {
					material Material { 
					ambientIntensity 0.2
					diffuseColor 1 0.1 0.1 
					emissiveColor 0 0 0
					shininess 0.1
					specularColor 0 0 0 
					transparency 0
					}

					texture	ImageTexture {
						url	[ "cadeiras.jpg" ]
					}
				}
			}
		]
	}
}


PROTO BancadaComEscada [
	field SFRotation RightOrLeft 0 0 0 0
	field SFVec3f Position 0 0 0
	field MFVec3f Espinha [0 0 0, -20 0 0]
	field MFVec3f EspinhaEscadas [0 0 0, -2 0 0]
]
{
	Transform {
		translation	IS Position
		rotation IS	RightOrLeft

		children [
			Shape {
				geometry Extrusion { 
					crossSection [0 -1, 0 0, 1 -1, 0 -1]
					spine IS Espinha #[0 0 0,-1 0 0]
					scale [10 20, 10 20]
					orientation 0 0 1 0
					endCap TRUE
					beginCap TRUE
					solid TRUE
					ccw TRUE
					convex TRUE
					creaseAngle 0
				}
				appearance Appearance {
					material Material { 
					ambientIntensity 0.2
					diffuseColor 1 0.1 0.1 
					emissiveColor 0 0 0
					shininess 0.1
					specularColor 0 0 0 
					transparency 0
					}

					texture	ImageTexture {
						url	[ "cadeiras.jpg" ]
					}
				}
			}
			Transform {
				translation	2 0 0
				children [
					Shape {
						geometry Extrusion { 
							crossSection [0 -1, 0 0, 1 -1, 0 -1]
							spine IS EspinhaEscadas
							scale [10 20, 10 20]
							orientation 0 0 1 0
							endCap TRUE
							beginCap TRUE
							solid TRUE
							ccw TRUE
							convex TRUE
							creaseAngle 0
						}
						appearance Appearance {
							material Material { 
							ambientIntensity 0.2
							diffuseColor 0.5 0.5 0.5 
							emissiveColor 0 0 0
							shininess 0.1
							specularColor 0 0 0 
							transparency 0
							}
						}
					}
				]
			}


		]
	}
}

PROTO Corner [
	field SFRotation RightOrLeft 0 0 0 0
	field SFVec3f Position 0 0 0
	field MFVec3f Espinha [
		0 0 0, 0 0 19
	]
]
{
	Transform {
		translation	IS Position
		rotation IS	RightOrLeft

		children [
			Shape {
				geometry Extrusion { 
					crossSection [
						-1 -1, -1 0, -1 0, 0 0, 1 0, 1 -1, -1 -1
					]
					spine IS Espinha #[0 0 0,-1 0 0]
					scale [
						10 10, 5 0
					]
					orientation 0 0 0 0
				}

				appearance Appearance {
					material Material { 
					diffuseColor 1 .1 .1 
					shininess .1
					}

					texture	ImageTexture {
						url	[ "cadeiras.jpg" ]
					}
				}
			}
		]
	}
}


