#Parede de protecção + rede
PROTO ParedeProteccao[]{
	Transform {
		children[
	    	DEF Chao Shape {
				geometry Extrusion {
					crossSection [0.60 -7.5, 0.86 -10.5, -0.86 -10.5, -0.6 -7.5 , 0.6 -7.5]
					spine [0 0 0, 0 0.95 0]
					beginCap TRUE
					endCap TRUE
					ccw	TRUE
					solid TRUE
					convex TRUE
				}
				appearance Appearance {
					texture	ImageTexture {
						url "concrete.jpg"
					}
				}
			}
			DEF PisoPedra Shape {
				geometry Extrusion {
					crossSection [0.60 -7.5, 0.86 -10.5, -0.86 -10.5, -0.6 -7.5 , 0.6 -7.5]
					spine [0 0.95 0, 0 1 0]
					beginCap TRUE
					endCap TRUE
					ccw	TRUE
					solid TRUE
					convex TRUE
				}
				appearance Appearance {
					texture	ImageTexture {
						url	"floor1.jpg"
					}
				}
			}

			Transform {
				translation	0 1 -10.75
				children Shape {
					geometry Box {size 1.72 2 0.5}
					appearance Appearance {
						material Material {
							ambientIntensity .416
							diffuseColor .992 1 1
							specularColor .38 .38 .27
							emissiveColor .18 .17 .13
							shininess .694
						}
					texture	ImageTexture {
					  url "concrete.jpg"
					}

					}
				}
			}
			Transform {
				translation	0 3 -10.70
				children Rede {}
			}
		]
	}
}

