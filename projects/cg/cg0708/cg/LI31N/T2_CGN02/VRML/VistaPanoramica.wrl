#Janela do restaurante
PROTO Janela[]{
	Transform {
		children [
			Transform {
				translation 0.805 0 0
				children DEF BarraVertival Shape {
					geometry Box {size 0.1 3 0.05}
					appearance Appearance {
						material Material {
							diffuseColor .61 .61 .61
							specularColor .39 .39 .39
							ambientIntensity .25
							shininess .11
						}
					}
				}
			}
			Transform {
				translation -0.805 0 0
				children USE BarraVertival
			}
			DEF	Vidro Shape	{
				geometry Box {size 1.71 3 0.03}
				appearance Appearance {
					material Material {
						diffuseColor .05 .46 .73
						specularColor 1 1 1
						ambientIntensity 0
						shininess .31
						transparency .59
						emissiveColor .03 .04 .2
					}
				}
			}
			Transform {
				translation	0 0.5 0
				children DEF	BarraHorizontal Shape {
					geometry Box {size 1.70 0.1 0.04}
					appearance Appearance {
						material Material {
							diffuseColor .61 .61 .61
							specularColor .39 .39 .39
							ambientIntensity .25
							shininess .11
						}
					}
				}
			}
			Transform {
				translation	0 -0.5 0
				children USE BarraHorizontal 
			}
			DEF BarraH Transform {
				scale 0.55 1 1
				children Transform {
					rotation 0 0 1 1.57
					translation	0 1.45 0
					children USE BarraVertival
				}
			}
			Transform {
				translation	0 -2.9 0
				children USE BarraH
			}
		]
	}
}



#Conjunto de janela com chão em forma de queijo
PROTO JanelaChao[]{
Transform {
	children [
 		Transform {
			translation	0 0 -10.95
			children Janela {}
		}	  
 		Transform {	#Chão
			translation	0 -2.5 0
			children Shape {
				geometry Extrusion {
					crossSection [0 0, 0.86 -11, -0.86 -11, 0 0]
					spine [0 0 0, 0 1 0]
					beginCap TRUE
					endCap TRUE
					ccw	TRUE
					solid TRUE
					convex TRUE
				}
				appearance Appearance{
					material Material {
						diffuseColor .992 1 1
						specularColor .482 .506 .475
						emissiveColor .18 .169 .129
						ambientIntensity .522
						shininess .671
					}
					texture	ImageTexture {
					  url "concrete.jpg"
					}
				}
			}
		}
	]
}
}

#Conjunto circular do restaurante
PROTO Restaurante[]{
	Transform {
		children [
			DEF Quadrante Group { #Quadrante 2
				children [
					JanelaChao {}
					Transform {
						rotation 0 1 0 0.155
						children JanelaChao	{}
					}
					Transform {
						rotation 0 1 0 0.31
						children JanelaChao	{}
					}
					Transform {
						rotation 0 1 0 0.465
						children JanelaChao	{}
					}
					Transform {
						rotation 0 1 0 0.620
						children JanelaChao	{}
					}
					Transform {
						rotation 0 1 0 0.775
						children JanelaChao	{}
					}
					Transform {
						rotation 0 1 0 0.930
						children JanelaChao	{}
					}
					Transform {
						rotation 0 1 0 1.085
						children JanelaChao	{}
					}
					Transform {
						rotation 0 1 0 1.24
						children JanelaChao	{}
					}
					Transform {
						rotation 0 1 0 1.395
						children JanelaChao	{}
					}
				]
			}
			Transform { #Quadrante 3
				rotation 0 1 0 1.55
				children USE Quadrante
			}
			Transform {	#Quadrante 4
				rotation 0 1 0 3.10
				children USE Quadrante
			}
			Transform {	#Quadrante 1
				rotation 0 1 0 4.65
				children USE Quadrante
			}
			Transform {	#Janela + pequena
				scale 0.6 1 1
				rotation 0 1 0 -0.12
				children JanelaChao	{}
			}
		]
	}
}


