#Proto de conjugação do Piso Panorâmico
PROTO PisoPanoramico[field SFVec3f posicao 0 0 0]{
	Transform {
		translation	IS posicao
		children [
			DEF Quadrante Group {
				children [
					ParedeProteccao {}
					Transform {
						rotation 0 1 0 0.155
						children ParedeProteccao	{}
					}
					Transform {
						rotation 0 1 0 0.31
						children ParedeProteccao	{}
					}
					Transform {
						rotation 0 1 0 0.465
						children ParedeProteccao	{}
					}
					Transform {
						rotation 0 1 0 0.620
						children ParedeProteccao	{}
					}
					Transform {
						rotation 0 1 0 0.775
						children ParedeProteccao	{}
					}
					Transform {
						rotation 0 1 0 0.930
						children ParedeProteccao	{}
					}
					Transform {
						rotation 0 1 0 1.085
						children ParedeProteccao	{}
					}
					Transform {
						rotation 0 1 0 1.24
						children ParedeProteccao	{}
					}
					Transform {
						rotation 0 1 0 1.395
						children ParedeProteccao	{}
					}
				]
			}
			Transform {
				rotation 0 1 0 1.55
				children USE Quadrante
			}
			Transform {
				rotation 0 1 0 3.10
				children USE Quadrante
			}
			Transform {
				rotation 0 1 0 4.65
				children USE Quadrante
			}
			Transform {
				scale 0.6 1 1
				rotation 0 1 0 -0.12
				children ParedeProteccao	{}
			}
			Transform {
				translation	0 2 0
				children Central	{}
			}
		]
	}
}


