PROTO CaboSul[]{
Transform {
	rotation 0 0 0 0
	children Transform {
		translation	0 6.55 -1.7
		rotation 1 0 0 0.23
		children
		Shape {
			geometry Cylinder {radius 0.03 height 14}
			appearance Appearance {
				material Material {
					diffuseColor .38 .38 .38
