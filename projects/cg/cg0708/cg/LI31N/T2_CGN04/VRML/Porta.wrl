PROTO pPequenaPorta[
	field SFRotation rotation 0 0 0 0
]
{
			
 DEF PequenaPorta Transform {
					rotation IS	rotation
					
					children [									
						Transform {
							translation	0 -0.25 0
							children [
								
						#Poste original															
						DEF Post Shape {
							appearance DEF Galvanized Appearance {
								material Material {
									ambientIntensity 0.3
									diffuseColor 0.3 0.3 0.3
									specularColor 0.2 0.2 0.2
									shininess 0.1
								}

							texture ImageTexture {
							url "images/BocadoPequenoMuro.JPG"							
						}						


							}
							geometry Cylinder {
								height 0.5
								radius 0.02
							}
						
						}	
					]
				}					
			
						#Poste à esquerda do poste original
						Transform {
							translation	-0.04 -0.25 0
							children USE Post
						}


						#Barra lateral à esquerda e abaixo
						Transform {							
							translation	0.2 -0.46 0
							scale 1.25 0.8 1
							children [
										DEF	SideBar Shape {
											appearance USE Galvanized 																			
											geometry Box {
												size 0.4 0.1 0.01
											}
										}
									]
								}						


						#Poste ao meio esquerdo
						Transform {
							translation	0.47 -0.25 0
							children USE Post
						}

						#Poste lateral à esquerda e acima
						Transform {
							translation	0.215 -0.01 0
							scale 1 1.07 1
							rotation 0 0 1 1.57
							children USE Post
						}
						
						#Rede de baixo
						Transform {
							scale 0.45 0.45 1
							translation	0 -0.45 0
							children [
								vFence {}
							]
						}
					]
	}

}




#USAGE da PequenaPorta
PROTO PequenaPorta []
{
	Group {
		children [
			DEF PequenaPorta1 Transform {				
			translation	1 0 0
				children [
					pPequenaPorta	{}		
					DEF	POSTOUCHSmall1 CylinderSensor	
					{
						autoOffset TRUE
						maxAngle 1.57
						minAngle 0
					}
	]
	ROUTE POSTOUCHSmall1.rotation_changed	TO PequenaPorta1.rotation
}
		   DEF PequenaPorta2 Transform {	
		   translation	2 0 0	
				children [
					pPequenaPorta	{
					rotation 0 1 0 3.1415
				}
				DEF	POSTOUCHSmall2 CylinderSensor	
				{
					autoOffset TRUE
					maxAngle 0
					minAngle -1.57

		}

	]
	ROUTE POSTOUCHSmall2.rotation_changed	TO PequenaPorta2.rotation
}

]
}
}




#USAGE da GrandePorta

PROTO GrandePorta []
{
	Group {
		children [
			DEF GrandePorta1 Transform {				
				translation	1 0 0
				children [
				pGrandePorta	{}		
					DEF	POSTOUCHBig1 CylinderSensor	
					{
					autoOffset TRUE
					maxAngle 1.57
					minAngle 0
					}
			]
					ROUTE POSTOUCHBig1.rotation_changed	TO GrandePorta1.rotation
		}
			DEF GrandePorta2 Transform {	
				translation	2 0 0	
				children [
					pGrandePorta	{
					rotation 0 1 0 3.1415
				}
					DEF	POSTOUCHBig2 CylinderSensor	
					{
					autoOffset TRUE
					maxAngle 0
					minAngle -1.57
					}
			]
					ROUTE POSTOUCHBig2.rotation_changed	TO GrandePorta2.rotation
		}

	]
	}
}

