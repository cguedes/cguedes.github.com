#VRML V2.0 utf8


EXTERNPROTO vFence [
   
]
"Fence.wrl"



PROTO pGrandePorta[
	field SFRotation rotation 0 0 0 0
]
{
			
 DEF GrandePorta Transform {
					rotation IS	rotation
					children [									
						#Poste original				
						DEF Post Shape {
							appearance DEF Galvanized Appearance {
								material Material {
									ambientIntensity 0.3
									diffuseColor 0.3 0.3 0.3
									specularColor 0.2 0.2 0.2
									shininess 0.1
								}

							texture ImageTexture {
							url "images/BocadoPequenoMuro.JPG"							
						}						

							}
							geometry Cylinder {
								height 1.0
								radius 0.02
							}
						}	

			

						#Barra lateral	à esquerda
						Transform {
									scale 1.25 1 1
									translation	0.2 0 0
									children [
										DEF	SideBar Shape {
											appearance USE Galvanized 																			
											geometry Box {
												size 0.4 0.1 0.01
											}
										}	
								]
							}
						#Poste à esquerda do poste original
						Transform {
							translation	-0.04 0 0
							children USE Post
						}


						#Barra lateral à esquerda e abaixo
						Transform {							
							translation	0.2 -0.46 0
							scale 1.25 0.8 1
							children USE SideBar

							
						}


						#Poste ao meio esquerdo
						Transform {
							translation	0.47 0 0
							children USE Post
						}

						#Poste lateral à esquerda e acima
						Transform {
							translation	0.215 0.495 0
							scale 1 0.54 1
							rotation 0 0 1 1.57
							children USE Post
						}
						
						#Rede de cima
						Transform {
							scale 0.45 0.5 1
							children [
								vFence {}
							]
						}

						#Rede de baixo
						Transform {
							scale 0.45 0.5 1
							translation	0 -0.45 0
							children [
								vFence {}
							]
						}
					]
	}

}


EXTERNPROTO vFence [
   
]
