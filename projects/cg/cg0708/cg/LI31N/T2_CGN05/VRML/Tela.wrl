#VRML V2.0 utf8

EXTERNPROTO	Axis [

]
"Axis1.wrl#Axis"

Axis {

}


PROTO Tela [
	field SFVec3f translation 0 0 0

]{
	Transform {
		translation	IS translation
		children [
			# Tela
			Transform {
				translation	3 105 0
				children [
					Shape {
						geometry Box {
							size .1 210 210
						}
						appearance Appearance {
							material Material {
								diffuseColor .8 .8 .8
							}
							# Definição da textura a aplicar na tela
							texture	MovieTexture {
								loop TRUE
								repeatS	FALSE
								repeatT	FALSE
								url ["Movie.mpg"]
								speed 2
							}
							textureTransform TextureTransform {
								scale 1 1
								center 105 105
							}
						}
					}
				]
			}
			# Suporte da tela
			Shape {
				geometry Extrusion {
					spine [
						0 219 -110, 0 219 110
					]
					crossSection [
						2 0, 0 2, 0 9, 7 9, 9 7, 9 2, 7 0, 2 0
					]
				}
				appearance Appearance {
					material Material {
						diffuseColor 1 1 1
						ambientIntensity .2
					}
				}
			}
		]
	}
}

Tela {

}