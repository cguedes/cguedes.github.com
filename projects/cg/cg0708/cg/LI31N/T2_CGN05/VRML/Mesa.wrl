PROTO Pe [
	field SFVec3f translation 0 0 0
	field SFRotation rotation 0 0 1 0
	field SFNode cor NULL

]{
	Transform {
		translation	IS translation
		rotation IS	rotation
		children [
			Transform {
				children [
					Shape {
						geometry Extrusion {
							spine [
								0 0 0, .5 0 0, 1.5 0 0, 3 0 0, 4 0 0, 26 0 0, 63.5 0 0, 64.5 0 0,
								65 0 0
							]
							crossSection [
								-1 -2, -.51 -2.55, 0 -3, 0 3, -.51 2.55, -1 2, -1 -2
							]
							ccw FALSE
							convex FALSE
							creaseAngle .977
							scale [
								.3 .5, .664 .9, 1.5 .98, 2.5 1, 3 1, 3 1, .5633 .98, .435 .9,
								.3 .3
							]
						}
						appearance IS cor
					}
				]
			}
			Transform {
				children [
					Shape {
						geometry Extrusion {
							spine [
								0 0 0, .5 0 0, 1.5 0 0, 3 0 0, 4 0 0, 26 0 0, 63.5 0 0, 64.5 0 0,
								65 0 0
							]
							crossSection [
								0 -3 , 0 3 , 1 3 , 1 -3 , 0 -3
							]
							ccw TRUE
							convex FALSE
							creaseAngle .977
							scale [
								1 .5, 1 .9, 1 .98, 1 1, 1 1, 1 1, 1 .98, 1 .9,
								1 .3
							]
						}
						appearance IS cor
					}
				]
			}
		]
	}


}

PROTO Mesa [
	field SFVec3f translation 0 0 0
	field SFRotation rotation 0 0 1 0

]{
   Transform {
	   translation IS translation
	   rotation	IS rotation
	   children	[
			DEF	Cor Appearance {
				material Material {
					diffuseColor .15 .15 .15
					specularColor .369 .369 .369
					emissiveColor .0275 .0275 .0275
					ambientIntensity .5
					shininess .361
				}
			}
			DEF	CorTampo Appearance {
				material Material {
					diffuseColor .52 .51 .45		   
					ambientIntensity .0567
					specularColor .76 .78 .54
					emissiveColor .28 .27 .24
					shininess .53
				}
			}
			# Definiçao de uma das pernas
			DEF Perna Transform {
				children [
					Pe {
						translation	-32.5 1 5.5
						cor	USE	Cor
					}
					Pe {
						translation	-32.5 69.5 5.5
						rotation 1 0 0 3.14
						cor	USE	Cor
					}
					PernaInc {
						translation	-17.5 66.5 5.5
						cor	USE	Cor
					}
				]
			}
			# Outra perna mas colocada no outro extremo
			Transform {
				translation	0 0 69
				children USE Perna
			}

			BaixoTampo {
				translation	-23.5 70.5 7.5
				cor	USE	Cor
			}

			Tampo {
				translation	0 73 0
				cor	USE	CorTampo
			}
		]
	}
}

