PROTO Tampo [
	field SFVec3f translation 0 0 0
	field SFNode cor NULL

]{
	Transform {
		translation	IS translation
		children [
			Transform {
				children [
					Shape {
						geometry Extrusion {
							crossSection [
								-36.5 2.5, -39.8 1, -40 .7, -40 .3, -39.8 0, 39.8 0, 40 .3,
								40 .7, 39.8 1, 36.5 2.5, -36.5 2.5
							]
							spine [
								0 0 0, 0 0 80
							]
							ccw FALSE
						}
						appearance IS cor
					}
				]
			}
		]
	}
}
# Não representam toda a perna mas apenas a estrutura entre o pé e a estrutura de sustentação do tampo
PROTO PernaInc [
	field SFVec3f translation 0 0 0
	field SFNode cor NULL
]{
	Transform {
		translation	IS translation
		children [
			Transform {
				children [
					Shape {
						geometry Extrusion {
							crossSection [
								-8 -2, 8 -2, 11 0, 11 0, 8 2, -8 2, -11 0, -11 0, -8 -2
							]
							spine [
								0 -63 0, 0 0 0
							]
							ccw FALSE
						}
						appearance IS cor
					}
				]
			}
		]
	}

}

