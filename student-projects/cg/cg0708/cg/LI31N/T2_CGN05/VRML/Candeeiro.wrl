# Unidade mínima da grelha do candeeiro 6cmX7cm
PROTO Quadrado [
	field SFVec3f translation 0 0 0

]{ 
	Transform {
		translation	IS translation
		children [
			Shape {
				geometry Extrusion {
					scale [
						1 1, .75 .75
					]
					crossSection [
						3.5 3, 3.5 -3, -3.5 -3, -3.5 3, -3.4 2.9, -3.4 -2.9, 3.4 -2.9,
						3.4 2.9, -3.4 2.9, -3.5 3, 3.5 3
					]
					spine [
						0 0 0, 0 3 0
					]
				}
				appearance Appearance {
					material Material {
						ambientIntensity .123
						diffuseColor .471 .522 .58
						specularColor 1 1 1
						shininess .13
					}
				}
			}
		]
	}
}

PROTO Grelha [
	field SFVec3f translation 0 0 0

]{
	Transform {
		translation	IS translation
		children
		# Nó onde são inseridos os quadrados
		DEF grelha Transform {
			translation	3.5 0 3
			children [
				# Script de criação da grelha
				# Adiciona vários quadrados para completar a forma
				DEF CriarGrelha Script {
					# Nó onde se inserem os quadrados
					field SFNode addedObject USE grelha 
					field MFNode tempNode []
					field SFString str ""
					url	"vrmlscript:
						function initialize () {
					   // Definição habitual do protótipo que visa assegurar  o isolamento do objecto script	 
							str+= 'EXTERNPROTO Quadrado [ field SFVec3f translation ] \"Candeeiro.wrl#Quadrado\"';
							// Grelha de 4X20 quadrados
							for( var c = 0; c != 4; ++c ){
								for( var l = 0; l != 20; ++l ){
									str += ' Quadrado { translation '+ c*7 + ' 0 ' + l*6 +' } ';
								}
							}																		  
							// Adicionar os nós
							tempNode = Browser.createVrmlFromString(str);
							addedObject.addChildren = tempNode;										  
						}

					"
				}
			]
		}
	}
}

PROTO Candeeiro [
	exposedField SFVec3f translation 0 0 0
	# Evento de entrada para acender ou apagar a luz associada ao candeeiro
	eventIn	SFBool acender

]{
	Transform {
		translation	IS translation
		children [
			# Armadura do candeeiro [_]
			Shape {
				geometry Extrusion {
					spine [
						15 0 0, 15 0 122
					]
					crossSection [
						15 10, 15 0, -15 0, -15 10, -14 10, -14 9.8, -14.8 9.8,
						-14.8 .2, 14.8 .2, 14.8 9.8, 14 9.8, 14 10, 15 10
					]
				}
				appearance Appearance {
					material Material {
						diffuseColor 1 1 1
					}
				}
			}
			Shape {
				geometry Extrusion {
					spine [
						0 0 61, 30 0 61
					]
					crossSection [
						10 -61, 0 -61, 0 61, 10 61, 10 60, 9.8 60, 9.8 60.8, .2 60.8,
						.2 -60.8, 9.8 -60.8, 9.8 -60, 10 -60, 10 -61
					]
					ccw	TRUE
				}
				appearance Appearance {
					material Material {
						diffuseColor 1 1 1
					}
				}
			}
			# Dois cilindros que simulam as duas lampadas
			Transform {
				translation	8 -4 61
				rotation 1 0 0 1.57
				children
				Shape {
					geometry Cylinder {
						radius 2
						height 120
					}
					appearance Appearance {
						material Material {
							diffuseColor 1 1 1
							ambientIntensity 1
							emissiveColor 1 1 1
							shininess 1
						}
					}
				}
			}
			Transform {
				translation	22 -4 61
				rotation 1 0 0 1.57
				children
				Shape {
					geometry Cylinder {
						radius 2
						height 120
					}
					appearance Appearance {
						material Material {
							diffuseColor 1 1 1
							ambientIntensity 1
							emissiveColor 1 1 1
							shininess 1
						}
					}
				}
			}

			Grelha {
				translation	1 -10 1
			}
			# Luz associda a cada um dos candeeiros
			DEF sl SpotLight {
				ambientIntensity 0.3
				beamWidth 1.5  #Cone interior
                cutOffAngle 3.1 # >180º #Angulo de abertura (determina a largura da base do cone)
				color 1 1 1
				direction 0 -1 0
				intensity .3
				location 15 20 61
				on FALSE
				radius 800 # distância até onde afecta
			}

			# Script para acender a luz do candeeiro 
			DEF	acenderLuz Script {
				eventIn	SFBool acenderLuz IS acender
				eventOut SFBool	apagarLuz
				# Esta flag tem de estar de acordo com o campo on da luz			 
				field SFBool acesa FALSE
				field SFFloat pointl 1
				url	"vrmlscript:
				function acenderLuz( set, timestamp){
					acesa = !acesa;
					apagarLuz = acesa;
				}
				"
				# Ligação entre o script e a spotlight (acender(on)/apagar(off))															   
				ROUTE acenderLuz.apagarLuz TO sl.on
			}
				
		]
	}
	
}

Candeeiro {

