#VRML V2.0 utf8

PROTO Projector [
	field SFVec3f translation 0 0 0
]{
	Transform {
		 translation IS	translation
		 rotation 1 0 0 3.14
		 children [
			 # Material do pe e plataforma
			 DEF metal 	Appearance {
				 material Material {
					ambientIntensity .3
					diffuseColor .3 .3 .5
					specularColor .7 .7 .8
					shininess .10
				}
			 }
			# Faces do projector
			Shape {
				geometry IndexedFaceSet {
					colorPerVertex FALSE
					coord Coordinate {
						point [
							-11 0 15, 11 0 15, 11 0 -15, -11 0 -15, -11 7 15, 11 7 15,
							11 7 -15, -11 7 -15
						]
					}
					coordIndex [
						0 1 5 4 -1
						1 2 6 5 -1
						2 3 7 6 -1
						3 0 4 7 -1
						3 2 1 0 -1
						4 5 6 7 -1
					]
					# Coordenadas da textura a aplicar no projector
					texCoord TextureCoordinate {
						point [0 0, .159 0, .850 0, 1 0,
							0 .21, .159 .21, .850 .21, 1 .21,
							0 .8028, .159 .8028, .850 .8028, 1 .8028,
							0 1, .159 1, .850 1, 1 1
						]
					}
					# Criação das faces da textura escolhendo os pontos
					texCoordIndex [
						6 10 11 7 -1
						13 14 10 9 -1
						11 7 6 10 -1
						#9 5 4 8  -1	 
						2 1 5 6 -1
						5 9 10 6  -1
						5 9 10 6 -1
					]
				}
				appearance Appearance {
					material Material {		  
						ambientIntensity .3
					}
					texture	ImageTexture {
						url	["Projector.gif"]
					}
				}
			}
			# Plataforma do projector
			Shape {
				 geometry Box {
					 size 24 .1 32
				 }
				 appearance	USE	metal
			 }
			 # Pé do projector
			 Transform {
				 translation 0 -6 0
				 children
				 Shape {
					 geometry Cylinder {
						 height	12
						 radius	1.5
					 }
					 appearance	USE	metal
				 }
			 }
		]
	}
}

Projector {

