#Proto da lateral esquerda
PROTO LeftArm[field	SFRotation larot 0 0 0 0 
	field SFVec3f latrans 0 0 0
	field SFColor  lacolor 0 0 0] {
		Group {
			children [
				Transform {
					translation	0.0735 0.1875 0.3575
					rotation 0 0 0 0
					children Shape {
						appearance Appearance {
							material Material {
								diffuseColor IS lacolor
								transparency 0
							}
						}
						geometry Box {
							size 0.147 0.375 0.715
						}
					}
				}
				Transform {
					translation	0.0735 0.375 0.3575
					rotation 1 0 0 1.5708
					scale 2.5 1 1
					children Shape {
						appearance Appearance {
							material Material {
								diffuseColor IS lacolor
							}
						}
						geometry Cylinder {
							height 0.715
							radius 0.04
						}
					}
				}
				Transform {
					translation	0.0735 0 0.06
					rotation 0 0 0 0
					children Shape {
						appearance Appearance {
							material Material {
								diffuseColor IS lacolor
							}
						}
						geometry Cylinder {
							height 0.02
							radius  0.01
						}
					}
				}
				Transform {
					translation	0.0735 0 0.655
					rotation 0 0 0 0
					children Shape {
						appearance Appearance {
							material Material {
								diffuseColor IS lacolor
							}
						}
						geometry Cylinder {
							height 0.02
							radius  0.01
						}
					}
				}
			]
		}

}


