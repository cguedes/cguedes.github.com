#VRML V2.0 utf8
EXTERNPROTO	eixo[]"eixo.wrl#teste"
PROTO MetalLado[]{
	Shape {
		geometry Box {size 0.05 2.27 0.018}
		appearance Appearance {texture	ImageTexture {url "Janelas\imagems\ferroBranco.jpg"}}
	}
}  

PROTO MetalHoriz[]{
	Shape {
		geometry Box {size 1 0.05 0.025}
		appearance Appearance {texture	ImageTexture {url "Janelas\imagems\ferroBrancoLado.jpg"}}
	}
}

PROTO MetalCentro[]{
	Shape {
		geometry Box {size 0.9 0.2 0.025}
		appearance Appearance {texture	ImageTexture {url "Janelas\imagems\ferroBrancoLado.jpg"}}
	}
}

# ---------------------VIDRO---------------------
PROTO vidroBaixo[]{
	Shape {
		geometry Box {size 0.9  0.85 .01}
		appearance Appearance {	material Material {transparency 0.4 diffuseColor 1 1 1 }}
	}
}
PROTO vidroCima[]{
	Shape {
		geometry Box {size 0.9  1.12 .01}
		appearance Appearance {	material Material {transparency 0.4 diffuseColor 1 1 1 }}
	}
}



#----------------------PORTA---------------------
#posição (0,0,0)

PROTO macaneta[]{
	Shape {
		geometry Cylinder{
			height 0.05
			radius 0.02
			top	TRUE
			bottom TRUE
			side TRUE
		}
		appearance Appearance {
			material Material {
				diffuseColor 0 0 0
				specularColor .5 .5 .5
				emissiveColor .15 .15 .15
				ambientIntensity 0
			}
		}
	}

}

PROTO porta[]{
	Transform {
		children [
			Transform {
				translation	0.5 0.025 0 
				children MetalHoriz	{}
			}
			Transform {
				translation	0.5 2.245 0
				children MetalHoriz	{}
			}
			Transform {
				translation	0.025 1.135 0
				children MetalLado {}
			}
			Transform {
				translation	0.975 1.135 0 #X = 0.025 + 0.05 + 0.9 = 0.975 
				children MetalLado {}
			}
			Transform {
				translation	0.5 1 0	#X = 0.9 /2 +0.05 = 0.5
										# Y = 0.1 + 0.5 + 0.85
				children MetalCentro {}
			}
			Transform {
				translation	0.50 0.475 0 # X = 0.45 + 0.05 = 0.50
										 # Y = 0.425 + 0.05= 0.475
				children vidroBaixo {}
			}
			Transform {
				translation	0.50 1.66 0 # X = 0.9/2 + 0.05 = 0.50
										 # Y = 1.12/2 + 0.05 + 0.85 + 0.2= 1.66 
				children vidroCima {}
			}

			Transform {
				translation	0.15 1 0.0375  #Z = 0.025/2(tamanho do metalCentro/2) + 5/2(altura do maçaneta/2)
				rotation 1 0 0 1.57
				children macaneta{}
			}
			Transform {
				translation	0.15 1 -0.0375 #Z = -0.0252(tamanho do metalCentro/2) + 5/2(altura do maçaneta/2)
				rotation 1 0 0 1.57
				children macaneta{}
			}
		]
	}

}

