PROTO umbreira[]{
	Transform {
		children [
			Transform {											
				translation	1.075 1.135 0 # Y = 2.27 / 2 =  1,135
				scale 1 1 1.1
				children MetalLado {}
			}
			Transform {
				translation	0.025 1.135 0 #Y = 2.27 / 2 =  1,135
				scale 1 1 1.1
				children MetalLado {}
			}
			Transform {
				translation	0.55 2.295 0 
				scale 1.1 1 1.1
				children MetalHoriz	{}
			}
		]

	}
}
PROTO teste[]{
Transform {
		children [
			Transform {
				children umbreira {}
			}
		]
	}	

}
teste {}

