#VRML V2.0 utf8

#Criação de protótipo

PROTO cone
[ field SFColor boxColour 0 2 0 
]
	{
		Shape {
    	  geometry Cone {
			bottomRadius 0.50 
			height 2
			side TRUE 
			bottom TRUE 

		  }
    	  appearance Appearance { material Material { diffuseColor IS boxColour  } }
    	  
	}
}




PROTO cilindro
[field SFColor boxColour 1 0 0 
]
	{
		Shape { 
    		geometry Cylinder {
				height 10 
				radius 0.25 
    		}
    		appearance Appearance { material Material { diffuseColor IS boxColour  } }
		}

}




PROTO Eixo
[ field SFColor Ecolor 0 2 0
]
{
	Transform {
		children [
			Shape {
				geometry Cylinder {
				height 40 
				radius 0.055 
			}
			appearance Appearance { material Material { diffuseColor IS Ecolor } }
			}


			Transform {
				translation	0 5 0
				children cilindro {boxColour IS Ecolor }
			}
		
			Transform {
				translation 0 11 0
				children cone {boxColour IS Ecolor}
			}

		]
	}
}

PROTO Centro
[ field SFColor boxColour 0 2 0 
]
{
	Shape {
      geometry Sphere {
		radius 0.50
	  }
      appearance Appearance { material Material { diffuseColor IS boxColour  } }
     }
	 
	 Shape {
		 geometry Cylinder {
			 height 40 
			 radius 0.25 
		 }
		 appearance Appearance { material Material { diffuseColor 0 1 0 } }
	 }

}

PROTO Texto
[ field MFString s "CG"
  field SFColor boxColour 0 2 0
]
{
	Shape{	
			geometry Text {
			string    IS s
			length    5
		}
		appearance Appearance { material Material { diffuseColor IS boxColour } }
	} 
}
	
	
	
	
PROTO Cartesiano
[
]
{
	Transform {
		scale 0.1 0.1 0.1
		#rotation 0 1 0 -1.57
		children [
			Transform {
			  rotation 0 0 0 1.57
			  children [
			  Transform {
				  translation	12 0 0 
				  children Texto {s "X" boxColour 1 0 0}
				}
			  Transform {
				  translation	0 12 0 
					children Texto {s "Y" boxColour 0 1 0}
				}
				Transform {
					translation	0 0 12 
					children Texto {s "Z" boxColour 0 0 1}
				}
			]
			}
			Transform {
				children Centro {boxColour 1 1 1 }
			}
			Transform {
				children Eixo {Ecolor 0 1 0 }
			}
			Transform {
				rotation 0 0 1 -1.57
				children Eixo {Ecolor 1 0 0 }
			}
			Transform {
				rotation 1 0 0 1.57
				children Eixo {Ecolor 0 0 1 }
			}
			

		]
	}		
}









Cartesiano { }
