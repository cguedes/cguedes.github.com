PROTO	Perna_mesa_dupla [
]{
	Group	{
		children [
			Transform	{
				translation	0.0125 0 0.005
				children	Perna_Mesa {}
			}
			Transform	{
			translation	 -0.005 0 -0.0125 
				rotation 0 1 0 1.57
				children Perna_Mesa	{}
			}
		]
	}
}


