# dimensões:
# x: 2
# y: ~1.45
# z: 0.1

EXTERNPROTO	Axis [ ] "axis_prof.wrl#Axis"
Transform {
	scale 1 1 1
	children Axis {  }
} 

PROTO Vidro [] {
	Shape {
		geometry Box {
			size 2 1.42 0.01
		}
		appearance Appearance {
			material Material  {
				ambientIntensity 0.2
				diffuseColor 0.1 0.1 0.1
				shininess 0.2
				transparency 0.5
			}
		}
	}
}

PROTO Barra [] {
	Shape {
		geometry Box {
			size 2 0.08 0.01
		}
		appearance Appearance {
			material Material  {
				ambientIntensity 0.2
				diffuseColor 0.8 0.8 0.8
				shininess 1
				transparency 0
			}
		}
	}
}

PROTO Vidro_Separador [] {
	Group {
		children [
			Transform {
				translation	0 0.71 0
				children Vidro { }
			}
			
			Transform {
				translation	0 0.04 0
				children Barra { }
			}
		] 
	}
}

Vidro_Separador	{ }
