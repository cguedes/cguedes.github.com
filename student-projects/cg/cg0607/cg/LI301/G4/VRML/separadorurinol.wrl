#VRML V2.0 utf8

PROTO Parafuso[]{
	Transform {
		rotation 1 0 0 1.57
		children [
			Shape {
				 appearance Appearance {	
						   material Material { 
								diffuseColor 0.4 0.4 0.4 
						   }
					   }
					   geometry Cylinder{
					   radius 0.5
					   height 0.1
					   }
			}
		]
	}

}

PROTO Suporte[]{
	Transform {
		#largura total 2.2 comprimento total 2.2 altura 3
		#começa no z=0 e nao centrado no z
		scale 0.01 0.01 0.01
		children [
			Transform {
				translation	0 0 0.1
				children [
					Shape {
						appearance Appearance {
							material Material {
							diffuseColor 0.9 0.9 0.9
							}
						}
						geometry Box {
						size 2 3 0.2 
						}
					}
				]
			}
			Transform {
				rotation 0 1 0 1.57
				translation	1.1 0 1.1
				children [
					Shape {
						appearance Appearance {
							material Material {
							diffuseColor 0.9 0.9 0.9
							}
						}
						geometry Box {
						size 2.2 3 0.2 
						}
					}
				]
			}

			Transform {
				translation	0 0 0.25
				children  Parafuso {}
			}
  
	    	Transform {
				rotation 0 1 0 1.57
				translation	0.95 0 1.2
				children Parafuso {}
			}  
		]
	}
}

PROTO suporte_inferior[]{
   		
	Group {
		children [
			Shape{
				  appearance Appearance {	
					   material Material { 
							diffuseColor 0.5 0.5 0.5 
					   }
				   }
				   geometry Cylinder { 						
					    bottom TRUE 
						height 0.02
						radius 0.04
						side TRUE 
						top TRUE  }
			}

			Transform {
				translation	0 0.081 0 
				children[
					Shape{
						  appearance Appearance {	
							   material Material { 
									diffuseColor 0.5 0.5 0.5 
							   }
						   }
						   geometry Cylinder { 						
					    		bottom TRUE 
								height 0.16
								radius 0.03
								side TRUE 
								top TRUE  }
					}
				]	
			}
		]
	}
}

PROTO separadorurinol[]{
	
	Group {#placa	  
		children [
			Shape {
    			geometry Box {size 0.6 1.9 0.05}
    			appearance Appearance {
        			material Material { 
						diffuseColor 1 1 1 
					}
    			}
			}
			Transform	{	#meio	cá
				translation	0.289 0 0.025
				children Suporte {} 
			}
			Transform	{  #cima  cá
				translation	0.289 0.7 0.025
				children Suporte {} 
			}

			Transform	{	#baixo	cá
				translation	0.289 -0.7 0.025
				children Suporte {} 
			}
			Transform	{	#meio lá roda-se meio cá e vai parar ao meio lá
				rotation 1 0 0 3.14
				children[
					Transform {	
						translation	0.289 0 0.025
						children Suporte {} 
					}	
				]
			}

			Transform	{
				rotation 1 0 0 3.14 #	 roda-se o cima cá e vai parar ao baixo lá
				children[
					Transform {	  #baixo lá
						translation	0.289 0.7 0.025
						children Suporte {} 	  
					}
				]
			}	
	
			Transform{
				rotation 1 0 0 3.14  #roda-se o baixo cá e vai parar ao cima lá
				children[
					Transform {	  #cima  lá
						translation	0.289 -0.7 0.025
						children Suporte {} 
					}
				]
			}
			Transform{
				translation	-0.25 -1.05 0
				children suporte_inferior {}
			}	
		]
	}
}
separadorurinol{}

			
