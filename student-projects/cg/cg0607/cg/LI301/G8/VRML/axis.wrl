#VRML V2.0 utf8

PROTO Esfera[] { #centro do eixo de coordenadas
 Shape { 
  geometry  Sphere{ radius 0.5 }
  appearance Appearance { material Material { transparency  0.5 } }
 }
}

PROTO Seta [ field SFColor Colour 0 0 1 ] { #cabeça de um eixo de coordenadas que recebe uma cor por pârametro
 Shape { 
  geometry Cone { bottomRadius 0.5 height 1 side TRUE bottom TRUE }
  appearance Appearance { material Material { diffuseColor IS Colour transparency  0.5 } }
 }
}

PROTO Tronco [ field SFColor Colour 0 0 1 ]	{ #tronco de um eixo de coordenadas que recebe uma cor por pârametro
 Shape { 
  geometry Cylinder {	bottom TRUE height 4 radius 0.2 side TRUE top TRUE }
  appearance Appearance { material Material { diffuseColor IS Colour transparency  0.5 } }
 }
}

PROTO Texto	[ field SFColor Colour 0 0 1 field MFString	aa ""] { #texto de um eixo de coordenadas que recebe uma cor por pârametro e a sua letra
 Billboard {
  axisOfRotation 0.0 0.0 0.0
  children [
   Shape { 
    geometry Text { string IS aa }
	appearance Appearance { material Material { diffuseColor IS Colour } }
   }
  ]
 }
}

PROTO Linha[ field SFColor Colour 0 0 1] { #linha de um eixo de coordenadas que recebe uma cor por pârametro com uma dimensão enorme para dar a ilusão de ser uma linha infinita
 Shape { 
  geometry Cylinder { bottom TRUE height 300 radius 0.01 side TRUE top TRUE } 
  appearance Appearance { material Material { diffuseColor IS Colour transparency  0.5 } }
 }
} 

PROTO Eixo [ field SFColor Colour 0 0 1 ] { #um eixo de coordenadas que recebe uma cor por pârametro
 Group {	 # como na construção dos elementos estes aparecem ja na vertical centrados na origem o proto do eixo que vamos construir será o eixo Y, por isso basta fazer translações em Y
  children [
   Transform {
	translation 0 2 0    #metade da altura do tronco para ficar com a sua base inferior na orgem	
    children Tronco { Colour IS Colour }
   }
   Transform {
    translation 0 4.5 0	 #altura do tronco + metade da altura da cabeça	para ficar em cima da base superior do tronco
    children Seta { Colour IS Colour }
   }
   Linha { Colour IS Colour }
  ]
 }
}

PROTO Eixos [] { #eixo de coordenadas a 3 dimensões				  
 Transform {
  scale 0.2 0.2 0.2 #escalamento para que cada eixo fique do tamanho unitário    
  children [
   Transform {
	rotation 0 0 1 -1.57
    children Eixo { Colour 1 0 0 } # eixo do X - para o termos basta rodar em relação a Z -90 graus
   }
   Eixo { Colour 0 1 0 } # eixo do Y - o seu proto ja é o eixo dos Y, não precisa de rotações
   Transform {
    rotation 1 0 0 1.57
    children Eixo { Colour 0 0 1 } # eixo do Z - para o termos basta rodar em relação a X 90 graus
   }
   Esfera { }
   # As letras de cada eixo, basta fazer uma translação no eixo a que esta pertence, no valor do tamanho do eixo
   Transform {
    translation 5 0 0
    children Texto { Colour 1 0 0 aa "X"}
   }
   Transform {
    translation 0 5 0
    children Texto { Colour 0 1 0 aa "Y"}
   }
   Transform {
    translation 0 0 5
    children Texto { Colour 0 0 1 aa "Z"}
   }
  ]
 }
}

Eixos { }