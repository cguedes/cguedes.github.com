#VRML V2.0 utf8

#código do eixo carteziano
PROTO axis [field SFColor axisColor 0 0 0 field MFString estring "A" field SFRotation textrot 0 0 0 0]{
	Group {												  
		children [
			Transform {
				translation	0 1.5 0
				children [
					Shape { 
						appearance Appearance { 
							material Material { 
								diffuseColor IS axisColor	
							} 
						}
						geometry Cylinder {height 3 radius 0.01}
					}
				]
			}

			Shape { 
				appearance Appearance { 
					material Material { 
						diffuseColor IS axisColor	
					} 
				}
				geometry Cylinder {height 10 radius 0.01}
			}

			Transform {
				translation	0 3 0
				children [
					Shape { 
						appearance Appearance { 
							material Material { 
								diffuseColor IS axisColor	
							} 
						}
						geometry Cone {bottomRadius 0.01 height 0.35}
					}
				]
			}
			Transform {
				translation	0 3.5 0
				rotation IS	textrot
				children [
					Shape {
						appearance Appearance {
							material Material {
								diffuseColor IS	axisColor
							}
						}
						geometry Text {
							string IS estring
						}
					}				  
				]
			}
		]
	}
}

Shape {
	appearance Appearance {
		material Material {
			diffuseColor 1 1 1
		}
	}
	geometry Sphere	{radius 0.02}
}

Transform {
	rotation 0 0 1 -1.57
	children [axis {axisColor 1 0 0 estring "X" textrot 0 0 1 1.57}]
}

axis {axisColor 0 1 0 estring "Y"}

Transform {
	rotation 1 0 0 1.57
	children [axis {axisColor 0 0 1 estring "Z" textrot 1 0 0 -1.57}]
}

#fim do código do eixo carteziano



