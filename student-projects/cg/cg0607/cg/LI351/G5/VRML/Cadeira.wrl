#VRML V2.0 utf8

####################################
#		Perna                       
####################################
PROTO Perna []{
	Shape {
		geometry Cylinder {
			height 0.4
			radius 0.01
		}
		appearance Appearance { material Material { diffuseColor 0 0 0 } }
	}
}

#######################################
# Esfera Auxiliar - p/varão de encosto 
#######################################
PROTO SphereAux []{
	Shape {
		geometry Sphere	{ radius 0.01 }
		appearance Appearance { material Material { diffuseColor 0 0 0 } }
	}
}

####################################
#		Varão de Encosto            
####################################
PROTO VaraoEncosto []{
	Group {
		children 
		[
			Shape {
				geometry Cylinder {
					height 0.3
					radius 0.01
				}
				appearance Appearance { material Material { diffuseColor 0 0 0 } }
			}

			Transform {
				translation	0 -0.15 0.155
				rotation 1 0 0 1.57
				children Shape {
					geometry Cylinder {
						height 0.32
						radius 0.01
					}
					appearance Appearance { material Material { diffuseColor 0 0 0 } }
				}
			}
			Transform	{
				translation	0 0.15 0
				children SphereAux { }
			}
			Transform {
				translation	0 -0.15 0
				children SphereAux { }
			}
		]
	}
}

####################################
#		Cadeira                     
####################################
PROTO Cadeira []{

	Group {
		children 
		[
			Transform {
				translation	0 0.65 0
				children Shape {
					geometry Box { size 0.36 0.16 0.01 }
					appearance Appearance {
						material Material {}
						texture	ImageTexture { url	"imagens/wood1.jpg"	}
					}
				}
			}

			Transform {
				translation	0 0.41 0.19
				children Shape {
					geometry Box {
						size 0.36 0.01 0.38 
					}
					appearance Appearance {
						material Material {}
						texture	ImageTexture { url	"imagens/wood1.jpg"	}
					}
				}
			}

			Transform {
				translation	0.1 0.55 -0.01
				children VaraoEncosto {	}
			}

			Transform {
				translation	-0.1 0.55 -0.01
				children VaraoEncosto {	}
			}

			# Perna dir/tras
			Transform {
				translation	0.1 0.209 0.05
				rotation 1 0 0 0.1
				children Perna { }
			}

			# Perna esq/tras
			Transform {
				translation	-0.1 0.2 0.05
				rotation 1 0 0 0.1
				children Perna { }
			}

			# Perna dir/frente
			Transform {
				translation	0.1 0.2 0.32
				rotation 1 0 0 -0.1
				children Perna { }
			}

			# Perna esq/frente
			Transform {
				translation	-0.1 0.2 0.32
				rotation 1 0 0 -0.1
				children Perna { }
			}
		]
	}
}

Cadeira	{ }